<%= if @attr_value do %>
  $("<%= "a##{@attr_name}_true_#{@id}" %>").removeClass("btn-default").addClass("btn-primary");
  $("<%= "a##{@attr_name}_false_#{@id}" %>").removeClass("btn-primary").addClass("btn-default");
<% else %>
  $("<%= "a##{@attr_name}_true_#{@id}" %>").removeClass("btn-primary").addClass("btn-default");
  $("<%= "a##{@attr_name}_false_#{@id}" %>").removeClass("btn-default").addClass("btn-primary");
<% end %>
$(".toggle.btn-primary").attr("disabled", true);
$(".toggle.btn-default").attr("disabled", false);